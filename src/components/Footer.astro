---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
import deltagere from "../assets/images/deltagere.svg";
import data from "../assets/images/data.svg";
import jordklode from "../assets/images/jordklode.svg";
import instagram from "../assets/images/instagram.svg";
import facebook from "../assets/images/facebook.svg";
import linkedin from "../assets/images/linkedin.svg";
import tiktok from "../assets/images/tiktok.svg";
import x from "../assets/images/x.svg";
import youtube from "../assets/images/youtube.svg";
---

<div>
  <div
    class="bg-blaa flex flex-col md:flex-row justify-center gap-16 md:gap-40 text-center p-20 mt-10 md:mt-15 items-center"
  >
    <div class="fadein">
      <Image src={deltagere} alt="Tre mennesker" />
      <div class="pt-4">
        <h2>1.184.747</h2>
        <h3 class="pt-2">Deltagere</h3>
      </div>
    </div>
    <div class="fadein2">
      <Image src={data} alt="Filer i en mappe" />
      <h2 class="pt-4">14.5 M GB</h2>
      <h3 class="pt-2">Data slettet</h3>
    </div>
    <div class="fadein3">
      <Image src={jordklode} alt="Jordklode der udsender CO2" />
      <h2 class="pt-4">3,625 tons</h2>
      <h3 class="pt-2">Co2 forhindret Ã¥rligt</h3>
    </div>
  </div>
  <div
    class="bg-moerkeblaa p-10 flex flex-col gap-10 md:flex-row justify-between items-center"
  >
    <a href="/">
      <Image src={logo} alt="Digital skraldedag logo" />
    </a>
    <div class="flex flex-row gap-4 items-end">
      <a href="https://www.instagram.com/worldcleanupday.global" target="_blank"
        ><Image src={instagram} alt="Instagram logo" /></a
      >
      <a href="https://www.facebook.com/worldcleanupday.global" target="_blank"
        ><Image src={facebook} alt="Facebook logo" /></a
      >
      <a
        href="https://www.linkedin.com/company/world-cleanup-day-official/"
        target="_blank"><Image src={linkedin} alt="LinkedIn logo" /></a
      >
      <a href="https://www.tiktok.com/@worldcleanupday.global" target="_blank"
        ><Image src={tiktok} alt="TikTok logo" /></a
      >
      <a href="https://x.com/letsdoitworld" target="_blank"
        ><Image src={x} alt="X logo" /></a
      >
      <a href="https://www.youtube.com/worldcleanupday" target="_blank"
        ><Image src={youtube} alt="YouTube logo" /></a
      >
    </div>
  </div>
</div>

<script>
  import { inView } from "motion";

  //   Deltagere
  const inviewelement = document.querySelector(".fadein");

  inView(inviewelement, () => {
    inviewelement.classList.add("animate__animated", "animate__fadeIn");
  });

  //   Data
  const inviewelement2 = document.querySelector(".fadein2");

  inView(inviewelement2, () => {
    inviewelement2.classList.add("animate__animated", "animate__fadeIn");
  });

  //   Jordklode
  const inviewelement3 = document.querySelector(".fadein3");

  inView(inviewelement3, () => {
    inviewelement3.classList.add("animate__animated", "animate__fadeIn");
  });
</script>
