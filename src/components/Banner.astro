<div class="bg-green p-3 fixed w-full" id="banner-top">
  <p class="text-xl text-black max-w-fit mx-auto">
    Digital skraldedag d. 15 marts 2025
  </p>
</div>

<script>
  const banner = document.getElementById("banner-top");

  // Banner til top efter man scrollet 50px
  window.onscroll = function () {
    if (window.scrollY > 50) {
      banner.classList.add("top-0");
    } else {
      banner.classList.remove("top-0");
    }
  };
</script>
