---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "textlink",
  size = "standard",
} = Astro.props;

const linkStyling = "";
const variantClasses = {
  textlink: "text-white hover:border-b-[1px] border-white",
  primary: "bg-orange text-moerkeblaa rounded-full",
  secondary: "bg-blaa text-white rounded-full",
  bannerlink: "text-black hover:border-b-[1px] border-black",
};
const sizeClasses = {
  small:
    "px-6 py-2.5 md:text-xl text-sm transition-all hover:scale-110 duration-500 w-fit",
};
---

<a
  href={href}
  target={target}
  class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></a
>
