---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import hero_img from "../assets/images/hero_img.webp";
import spoergsmaalstegn from "../assets/images/spoergsmaalstegn.svg";
import jordklode from "../assets/images/jordklode.svg";
import enheder from "../assets/images/enheder.svg";
import deling from "../assets/images/deling.svg";
import datalagring from "../assets/images/datalagring.svg";
import kapacitet from "../assets/images/kapacitet.svg";
import vidste_1 from "../assets/images/vidste_1.svg";
import vidste_2 from "../assets/images/vidste_2.svg";
import vidste_3 from "../assets/images/vidste_3.svg";
import skraldespand from "../assets/images/skraldespand.webp";
---

<MainLayout title="Forside" farve="bg-blaa">
  <article class="flex flex-col gap-20 md:gap-32">
    <!-- Hero -->
    <section class="mx-2 md:mx-28 md:grid md:grid-cols-5">
      <div class="col-span-2 grid gap-5 md:gap-10 md:my-auto">
        <h1 class="leading-tight">Digital Skraldedag</h1>
        <p class="font-poppins text-[20px] md:text-[37px]">Ryd op i dit digitale affald!</p>
        <div class="flex flex-row gap-5 md:gap-10 md:my-5">
          <Link href="#" target="_blank" variant="primary" size="small">Save the date</Link>
          <Link href="#" target="_blank" variant="primary" size="small">Del med ven</Link>
        </div>
      </div>
      <Image src={hero_img} class="w-full col-span-3 mt-10" alt="" />
    </section>

    <!-- Hvad er Digital Skraldedag? -->
    <section class="mx-2 md:mx-28 bg-moerkeblaa rounded-3xl px-6 py-10 md:p-40 md:grid md:grid-cols-5">
      <div class="col-span-3 flex flex-col gap-3 md:gap-10 my-auto">
        <h2>Hvad er Digital Skraldedag?</h2>
        <p>
          Digital Cleanup Day er en dag dedikeret til at rydde op i vores digitale liv, ligesom vi rydder op i vores fysiske miljø på World Cleanup Day. Nu i sit femte år, og organiseret af Let's Do It World, har Digital Cleanup Day til formål at øge bevidstheden om digital forurening og opfordre enkeltpersoner og virksomheder til at rydde op og
          omstrukturere deres online tilstedeværelse.
        </p>
      </div>
      <Image src={spoergsmaalstegn} class="mx-auto col-span-2 p-10 md:p-0" alt="" />
    </section>

    <!-- Hvorfor slippe af med digitalt skrald? -->
    <section class="mx-2 md:mx-28">
      <h2 class="text-center">Hvorfor slippe af med digitalt skrald?</h2>
      <div class="grid gap-20 md:grid-cols-3 mt-8 md:mt-24 mb-12">
        <div>
          <Image src={jordklode} class="mx-auto pb-6" alt="" />
          <h3 class="text-center">Hjælper med at reducere <br />CO2-udledning</h3>
        </div>
        <div>
          <Image src={enheder} class="mx-auto pb-6" alt="" />
          <h3 class="text-center">Forlænger dine <br />enheders levetid</h3>
        </div>
        <div>
          <Image src={deling} class="mx-auto pb-6" alt="" />
          <h3 class="text-center">Fremskynder deling og <br />søgning af information</h3>
        </div>
      </div>
      <div class="grid gap-20 md:grid-cols-2 md:mx-48">
        <div>
          <Image src={datalagring} class="mx-auto pb-6" alt="" />
          <h3 class="text-center">Reducerer datalagring <br />sikkerhedsrisici</h3>
        </div>
        <div>
          <Image src={kapacitet} class="mx-auto pb-6" alt="" />
          <h3 class="text-center">Øger lagring og server <br />kapacitet</h3>
        </div>
      </div>
    </section>

    <!-- Vidste du... -->
    <section class="mx-2 md:mx-28 md:grid md:grid-cols-5 bg-moerkeblaa rounded-3xl p-10 md:p-32">
      <Image src={vidste_1} class="mx-auto col-span-2 p-10 md:p-0" alt="" />
      <p class="col-span-3">Vidste du... at en e-mail udleder i gennemsnit 4 g CO2. Det svarer til det CO2-aftryk, som en tændt pære har i 6 minutter!</p>
    </section>

    <!-- Registrer dit bidrag -->
    <section class="bg-orange py-8 px-6 md:py-10 md:px-32 md:grid md:grid-cols-2 gap-28">
      <div class="grid align-middle gap-2 md:my-10">
        <h2>Registrer dit bidrag</h2>
        <p>
          Digital Cleanup Day er en dag dedikeret til at rydde op i vores digitale liv, ligesom vi rydder op i vores fysiske miljø på World Cleanup Day. Nu i sit femte år, og organiseret af Let's Do It World, har Digital Cleanup Day til formål at øge bevidstheden om digital forurening og opfordre enkeltpersoner og virksomheder til at rydde op og
          omstrukturere deres online tilstedeværelse.
        </p>
        <div class="my-8 md:my-0 md:mt-4">
          <Link href="#" target="_blank" variant="secondary" size="small">Del med ven</Link>
        </div>
      </div>
      <Image src={skraldespand} alt="" />
    </section>

